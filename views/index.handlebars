<section class="container bg-warning">
  <div class="jumbotron text-center bg-warning">
<img src="../public/assets/images/burger1.jpg" class="img-fluid">
<h1>Eat-Da-Burger</h1>
<div class="row">
  <div class="col-6">
<h2>BURGER CREATE</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-6">
<h2>BURGER K.O</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
</div>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <form action="/api/burgers" method="POST">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
    <button type="submit" class="burgerAddButton">Add burger</button>
  </div>
</form>
</section>